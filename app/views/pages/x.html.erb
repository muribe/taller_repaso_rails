<h1>Myckel Uribe</h1>
<div class="container">
    <%= form_tag(pages_save_user_path, method:"post", class: 'form-horizontal') do %>
        <div class="form-group">        
            <%= label_tag 'name', nil, class: 'control-label col-sm-2' %>
            <div class="col-sm-3">            
                <%= text_field_tag 'name', nil,class: 'form-control ' %>
            </div>
        </div>
        <div class="form-group">        
            <%= label_tag 'last_name', nil, class: 'control-label col-sm-2' %>
            <div class="col-sm-3">            
                <%= text_field_tag 'last_name', nil,class: 'form-control ' %>
            </div>
        </div>
        <div class="form-group">        
            <%= label_tag 'email', nil, class: 'control-label col-sm-2' %>
            <div class="col-sm-3">            
                <%= email_field_tag 'email', nil, class: 'form-control ' %>
            </div>
        </div>
        <div class="form-group">        
            <%= label_tag 'age', nil, class: 'control-label col-sm-2' %>
            <div class="col-sm-3">            
                <%= text_field_tag 'age', nil, class: 'form-control ' %>
            </div>
        </div>
        <div class="form-group"> 
            <div class="col-sm-offset-2 col-sm-2">
                <%= submit_tag "Save", class:'btn btn-primary', data: { confirm: "Are you sure?" } %>
            </div>
        </div>
    <% end %>
</div>  


